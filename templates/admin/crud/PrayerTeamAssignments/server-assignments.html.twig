{% extends '../../page/mainDashboard.html.twig' %}
{% block main %}
{#    {{ dump(form) }}#}
    <h3>Launch Point: {{ launchPoint.name }}</h3>
    {{ form_start(form) }}
{#    {{ form_widget(form.eventParticipants) }}#}
    <div class="list-group">
        {% for server in form.eventParticipants %}
            {% for serverAssignment in server.eventPrayerTeamServers %}
                <div class="list-group-item list-group-item-action" aria-current="true">
                    <div class="container text-center">
                        <div class="row">
                            <div class="col">
                                <p><strong>Name: </strong>{{ server.vars.value.person.FullName }}</p>
{#                                {{  dump(server) }}#}
                            </div>
                            <div class="col">
                                {{ form_errors(serverAssignment) }}
                                {{ form_widget(serverAssignment) }}
                                {{ form_help(serverAssignment) }}
                            </div>
                        </div>
                    </div>

                </div>
            {% endfor %}
        {% endfor %}
    </div>
    <div class="mt-3">
            {{ form_row(form.AssignPrayerTeams) }}
    </div>
    {{ form_end(form) }}
{% endblock %}