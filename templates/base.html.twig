<!DOCTYPE html>
<html {% block html_tag %}lang="{{ app.request.locale }}"{% endblock %}>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}{{ title|default("Men's Encounter") }}{% endblock %}</title>
        {% block icon_link %}<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">{% endblock %}
        {% block meta %}{% endblock %}
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
{#            {{ encore_entry_link_tags('app') }}#}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
{#            {{ encore_entry_script_tags('app') }}#}
        {% endblock %}
    </head>
    <body {% block body_tag %}{% endblock %}>
        <!-- Navigation-->
        {% block navigation %}{% endblock %}
        <div
            id="toast-container"
            class="toast-container position-fixed top-0 end-0 p-3"
        >
            {% for flash in app.flashes('error') %}
                {{ include('frontend/compnents/_toast.html.twig', {
                    title: 'Alert!',
                    body: flash
                }) }}
            {% endfor %}
        </div>
        {% block layout %}

            {% block body %}{% endblock %}
        {% endblock %}

        <!-- Footer-->
        {% block footer %}{% endblock %}
    </body>
</html>
