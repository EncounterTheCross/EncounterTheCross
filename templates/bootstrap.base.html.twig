{% extends 'base.html.twig' %}

{% block ticket %}Grayscale - Start Bootstrap Theme{% endblock %}
{% block icon_link %}<link rel="icon" type="image/x-icon" href="{{ asset('build/favicon.ico') }}" />{% endblock %}
{% block meta %}
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <meta name="description" content="" />
    <meta name="author" content="" />
{% endblock %}
{% block javascripts %}

