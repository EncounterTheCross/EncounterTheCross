<div{{ attributes.defaults({
        'data-controller': 'modal',
    }) }}
>
    {% block trigger %}{% endblock %}

    <dialog
            class="open:flex bg-gray-800 rounded-lg shadow-xl inset-0 w-full md:w-fit md:max-w-[50%] md:min-w-[50%] backdrop:bg-slate-600 backdrop:bg-opacity-80 backdrop:backdrop-blur-sm"
            data-modal-target="dialog"
            data-action="close->modal#close click->modal#clickOutside"
    >
        <div class="flex grow p-5">
            <div class="grow overflow-auto p-1">
                {% block content %}
                {% endblock %}
            </div>
        </div>

        {% if block('loading_template') %}
            <template data-modal-target="loadingTemplate">
                {% block loading_template %}{% endblock %}
            </template>
        {% endif %}
    </dialog>
</div>

