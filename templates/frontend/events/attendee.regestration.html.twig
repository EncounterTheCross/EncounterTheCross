{% extends 'frontend/events/regestration.html.twig' %}

{% block registeration_form %}
    <div class="row">
        <div class="col-md">
            <p class="h3 text-start">Attendee Information:</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md mb-3">
            {{ form_row(form.person.firstName) }}
        </div>
        <div class="col-md mb-3">
            {{ form_row(form.person.lastName) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md mb-3">
            {{ form_row(form.person.email) }}
        </div>
        <div class="col-md mb-3">
            {{ form_row(form.person.phone) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md mb-3">
            {{ form_row(form.line1) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md mb-3">
            {{ form_row(form.line2) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md mb-3">
            {{ form_row(form.city) }}
        </div>
        <div class="col-md mb-3">
            {{ form_row(form.state) }}
        </div>
        <div class="col-md mb-3">
            {{ form_row(form.zipcode) }}
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-md">
            <p class="h3 text-start">Contact Person:</p>
            <p class="text-start"><small>We would like to speak to your spouse, a member of your family, or a friend 2 weeks prior to the encounter to ask them to pray for and encourage you. Please provide one contact</small></p>
        </div>
    </div>
    <div class="row">
        <div class="col-md mb-3">
            {{ form_row(form.attendeeContactPerson.details.firstName) }}
        </div>
        <div class="col-md mb-3">
            {{ form_row(form.attendeeContactPerson.details.lastName) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md mb-3">
            {{ form_row(form.attendeeContactPerson.details.phone) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md mb-3">
            {{ form_row(form.attendeeContactPerson.relationship) }}
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-md mb-3">
            <p class="h3 text-start">Attendee Questions:</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md mb-3">
            {{ form_row(form.launchPoint) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md mb-3">
            {{ form_row(form.invitedBy) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md mb-3">
            {{ form_row(form.church) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md mb-3">
            {{ form_row(form.healthConcerns) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md mb-3">
            {{ form_row(form.questionsOrComments) }}
        </div>
    </div>
{% endblock %}