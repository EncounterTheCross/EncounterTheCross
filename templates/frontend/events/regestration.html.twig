{% extends 'frontend/blank_content_container.html.twig' %}

{% block content %}
    <div class="row">
        <div class="col">
            <div class="row justify-content-center">
                <div class="col-1">
                    <i class="fa-solid fa-church fa-2xl mb-2 text-dark text-center"></i>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    <h1 class="text-dark display-1 mb-5 text-center">Registration</h1>

                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header">
            <h3 class="text-center">{{ event.name|default('') }}</h3>
        </div>
        <div class="card-body">
            {{ form_start(form, { 'attr' : { 'class': 'requires-validation-js', 'novalidate': true, 'id': form.vars.id  }}) }}
            <div class="row">
                <div class="col">
                    {{ form_errors(form) }}
                </div>
            </div>
                {% block registeration_form %}
                    {{ form_widget(form) }}
                {% endblock %}
                <div class="row">
                    <div class="col-md mb-3">
                        {{ form_row(form.paymentMethod) }}
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Register!</button>
            {{ form_end(form) }}
        </div>
    </div>

{% endblock %}