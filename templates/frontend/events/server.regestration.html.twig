{% extends 'frontend/events/regestration.html.twig' %}

{% block registeration_form %}
    <div class="row">
        <div class="col-md">
            <p class="h3 text-start">Server Information:</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md mb-3">
            {{ form_row(form.person.firstName) }}
        </div>
        <div class="col-md mb-3">
            {{ form_row(form.person.lastName) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md mb-3">
            {{ form_row(form.person.email) }}
        </div>
        <div class="col-md mb-3">
            {{ form_row(form.person.phone) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md mb-3">
            {{ form_row(form.line1) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md mb-3">
            {{ form_row(form.line2) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md mb-3">
            {{ form_row(form.city) }}
        </div>
        <div class="col-md mb-3">
            {{ form_row(form.state) }}
        </div>
        <div class="col-md mb-3">
            {{ form_row(form.zipcode) }}
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-md mb-3">
            <p class="h3 text-start">Server Questions:</p>
        </div>
    </div>
    <div class="row">
        <div class="col-md mb-3">
            {{ form_row(form.launchPoint) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md mb-3">
            {{ form_row(form.serverAttendedTimes) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md mb-3">
            {{ form_row(form.healthConcerns) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md mb-3">
            {{ form_row(form.questionsOrComments) }}
        </div>
    </div>
{% endblock %}